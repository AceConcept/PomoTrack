{
  "name": "produc-dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "dev:electron": "vue-cli-service serve & sleep 5 && NODE_ENV=DEV electron app.js",
    "build:web": "vue-cli-service build",
    "build:gh-pages": "vue-cli-service build --mode gh-pages --dest docs",
    "build:electron": "vue-cli-service build --mode electron --dest dist-electron",
    "serve:web": "serve -s dist",
    "serve:electron": "electron app.js",
    "lint": "vue-cli-service lint",
    "lint:fix": "vue-cli-service lint --fix",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e:dev": "testcafe chrome tests/e2e --app \"yarn run dev\"",
    "test:e2e:prod": "yarn run build && PORT=8081 testcafe chrome:headless tests/e2e --app \"yarn run serve:web\"",
    "test": "yarn run lint && yarn run test:unit && yarn run test:e2e:prod"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/vue-fontawesome": "^0.1.6",
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "sass": "^1.21.0",
    "sass-loader": "^7.1.0",
    "serve": "^11.0.1",
    "vue": "^2.6.10",
    "vuex": "^3.1.1",
    "vuex-persist": "^2.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-unit-jest": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "electron": "^5.0.6",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "eslint-plugin-vue": "^5.2.2",
    "testcafe": "^1.3.0",
    "vue-template-compiler": "^2.6.7"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:vue/recommended"
    ],
    "rules": {
      "no-trailing-spaces": [
        2,
        {
          "skipBlankLines": true
        }
      ]
    },
    "parserOptions": {
      "ecmaVersion": 2019
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
